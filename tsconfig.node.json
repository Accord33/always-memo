{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist-electron",
    "rootDir": ".",
    "types": ["node"],
    "sourceMap": true
  },
  "include": ["electron", "src/shared"],
  "exclude": ["node_modules", "dist", "dist-electron"]
}
